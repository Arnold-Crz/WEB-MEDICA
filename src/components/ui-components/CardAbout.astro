---
export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props as Props;
---

<div class="card">
  <div class="card_logo">
    <slot />
  </div>
  <div class="card_content">
    <h2 class="card_content_title">{title}</h2>
    <p class="card_content_description">{description}</p>
  </div>
</div>

<style lang="scss">
  @use '../../styles/sass/variables' as v;
  .card {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    background-color: v.$colorWhite;
    width: 100%;
    margin: 0 auto;
    border-radius: 15px;
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
    padding: 1.5rem 0.8rem;

    &_logo {
      width: 50px;
      height: 50px;
      border-radius: 10px;
      background-color: v.$colorBluee;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;
      filter: drop-shadow(0px 0px 4px v.$colorBluee);
    }

    &_content {
      display: flex;
      flex-direction: column;
      box-shadow: none;
      gap: 0;

      &_title {
        color: v.$colorBluee;
        font-size: 1.2rem;
        font-weight: 600;
        align-self: flex-start;
      }
      &_description {
        color: v.$colorText;
        font-size: 0.9rem;
        font-weight: 400;
      }
    }
  }
</style>
