---
export interface Props {
  title: string;
  subTitle: string;
  description: string;
}

const { title, subTitle, description } = Astro.props as Props;
---

<article>
  <figure class="flex items-center content-center flex-col">
    <div>
      <slot />
      <figcaption>{title} <span>{subTitle}</span></figcaption>
    </div>
    <p class="description">{description}</p>
  </figure>
</article>

<style lang="scss">
  :root {
    --color-secction-bg: #f4f7fd;
    --color-text-white: #fff;
    --color-secction-text: #333;
    --color-blue: #1d4ed8;
    --color-blue-claro: #a8bfff;
  }
  article {
    width: 90%;
    margin: 0 auto;
    border-radius: 15px;
    background-color: var(--color-blue);
    padding: 1rem;

    figure {
      div {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;

        figcaption {
          margin-top: 10px;
          color: var(--color-text-white);
          font-size: 1.5rem;
          font-weight: 600;
          span {
            font-size: 1.2rem;
            font-weight: 400;
          }
        }
      }

      .description {
        margin-top: 10px;
        color: var(--color-text-white);
        font-size: 1rem;
        line-height: 1.4rem;
        font-weight: 200;
      }
    }
  }
</style>
