<style lang="scss">
  :root {
    --color-secction-bg: #f4f7fd;
    --color-text-white: #fff;
    --color-secction-text: #333;
    --color-blue: #1d4ed8;
    --color-blue-claro: #a8bfff;
  }

  section {
    margin-top: 30px;
    padding: 0 1.2rem;
    position: relative;
    h2 {
      font-size: 2rem;
      font-weight: 800;
      color: var(--color-secction-text);
      span {
        color: var(--color-blue);
      }
    }
    p {
      font-size: 1.2rem;
      font-weight: 400;
      margin-bottom: 2rem;
      color: var(--color-secction-text);
    }

    .about-circle {
      position: absolute;
      top: 230px;
      left: -120px;
      z-index: -1;
    }
  }
</style>
